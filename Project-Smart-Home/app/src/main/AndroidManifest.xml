<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project_smart_home">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera2"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.member.LaunchActivity"></activity>
        <activity android:name=".ui.member.FaceRegisterActivity" />
        <activity android:name=".ui.manual.ManualActivity" />
        <activity android:name=".ui.AI.UserSettingAIActivity" />
        <activity android:name=".ui.device.DeviceControllerActivity" />
        <activity
            android:name=".ui.setting.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".ui.member.MemberActivity" />
        <activity android:name=".ui.AI.AIActivity" />
        <activity android:name=".ui.message.MessageActivity" />
        <activity android:name=".ui.room.RoomActivity" />
        <activity android:name=".ui.room.RoomListActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>