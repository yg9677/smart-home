<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/data_con_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_back"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/temp_con_txt"
                android:text="온도"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <Spinner
                android:id="@+id/temp_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/temp_above_below_group"/>
            <RadioGroup
                android:id="@+id/temp_above_below_group"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <RadioButton
                    android:id="@+id/temp_gte_rbtn"
                    android:text="이상"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/temp_lt_rbtn"
                    android:text="미만"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>
            <TextView
                android:id="@+id/dust_con_txt"
                android:text="미세먼지"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/temp_con_txt"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <Spinner
                android:id="@+id/dust_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/temp_con_txt"
                app:layout_constraintRight_toLeftOf="@id/dust_above_below_group"/>
            <RadioGroup
                android:id="@+id/dust_above_below_group"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/temp_con_txt"
                app:layout_constraintRight_toRightOf="parent">
                <RadioButton
                    android:id="@+id/dust_gte_rbtn"
                    android:text="이상"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/dust_lt_rbtn"
                    android:text="미만"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>
            <TextView
                android:id="@+id/hum_con_txt"
                android:text="습도"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dust_con_txt"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <Spinner
                android:id="@+id/hum_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dust_con_txt"
                app:layout_constraintRight_toLeftOf="@id/hum_above_below_group"/>
            <RadioGroup
                android:id="@+id/hum_above_below_group"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dust_con_txt"
                app:layout_constraintRight_toRightOf="parent">
                <RadioButton
                    android:id="@+id/hum_gte_rbtn"
                    android:text="이상"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/hum_lt_rbtn"
                    android:text="미만"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id="@+id/data_con_save_btn"
            android:text="저장"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/data_con_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>